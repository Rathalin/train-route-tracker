@tailwind base;
@tailwind components;
@tailwind utilities;
@tailwind variants;

html,
body {
	@apply h-full overflow-hidden;
}

/* Custom Skeleton overrides */
.btn-sm {
	padding-block: 0.3rem;
}

.btn,
.btn-md {
	padding-block: 0.4rem;
}

.btn-lg {
	padding-block: 0.5rem;
}

.btn-xl {
	padding-block: 0.6rem;
}

.list-nav button {
	padding-block: 0.4rem;
}
